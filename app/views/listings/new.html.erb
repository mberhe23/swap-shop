<div class="page-header">
  <h1>listing/new page</h1>
</div>
<div class="listing-new-form">
  <div class="listing-new-form-content">
    <%= simple_form_for @listing do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :category %>
      <%# <%= f.input :condtion %>
            <%= f.input :photo, as: :file,
                required: true, input_html: { hidden: true },
                id: "photo-btn"%>
      <a id="upload-btn" class="btn photo-btn"><i class="icon-upload-alt"></i> Upload</a>
      <div class="listing-new-btns">

        <%= f.submit "Create", class: "btn create-btn" %>
      </div>
    <% end %>
  </div>
</div>
